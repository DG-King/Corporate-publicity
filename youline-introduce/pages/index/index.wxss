/**index.wxss**/
.container {
  padding-bottom: 30rpx;
}
.logoImg {
  margin: 48rpx 0 0 30rpx;
}
.secLogo {
  padding: 0 30rpx 30rpx 0;
  text-align: right;
}
.post-swiper {
  width: 690rpx;
  height: 390rpx;
  margin: 0 30rpx 44rpx;
}
.post-img {
  display: block;
  width: 100%;
  height: 390px;
}
.comTit {
  display: block;
  margin: 0 0 30rpx 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  font-family: 'Microsoft YaHei';
  color: #333;
}
.comText {
  display: block;
  margin: 0 30rpx 50rpx;
  font-size: 24rpx;
  font-family: 'Microsoft YaHei';
  color: #333;
}
.proList {
  padding: 0 30rpx;
  margin-bottom: 50rpx;
}
.proIntro {
  display: block;
  margin-bottom: 24rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  font-family: 'Microsoft YaHei';
  color: #333;
}
.proTit, .proDet {
  display: block;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  font-family: 'Microsoft YaHei';
  color: #333;
}
.proVideo {
  height: 400rpx;
  margin-bottom: 30rpx;
}
.proVideo video {
  width: 100%;
  height: 100%;
}
.hiddenText {
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.showMore {
  display: block;
  text-align: right;
  font-size: 24rpx;
  font-family: 'Microsoft YaHei';
  color: #616161;
}